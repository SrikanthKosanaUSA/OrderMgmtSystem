@model USAMarketing.Models.LineItemModels
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>@Html.DisplayNameFor(model => model.LineItemCollection[0].ItemID)</td>
            <td>@Html.DropDownList("ItemList")</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.LineItemCollection[0].Quantity)</td>
            <td>@Html.TextBoxFor(model => model.LineItemCollection[0].Quantity, new { required = "required" })</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.LineItemCollection[0].UnitPrice)</td>
            <td>@Html.TextBoxFor(model => model.LineItemCollection[0].UnitPrice, new { required = "required" })</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.LineItemCollection[0].Amount)</td>
            <td>@Html.TextBoxFor(model => model.LineItemCollection[0].Amount, new { required = "required" })</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.LineItemCollection[0].InvoiceID)</td>
            <td>@Html.TextBoxFor(model => model.LineItemCollection[0].InvoiceID, new { required = "required" })</td>
        </tr>
        
    </table>
    <p></p>
    <p></p>
    <input type="submit" value="Create New" />
}